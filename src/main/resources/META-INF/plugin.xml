<idea-plugin>
    <id>com.kristofszilagyi</id>
    <name>IntelliJ Kotlin Inspections</name>
    <version>0.0.1</version>
    <vendor email="dummy" url="dummy">dummy</vendor>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>


    <extensions defaultExtensionNs="com.intellij">
        <compileServer.plugin classpath="jps/kotlin-jps-plugin.jar;kotlin-stdlib.jar;kotlin-reflect.jar;kotlin-plugin.jar"/>

        <localInspection implementationClass="com.kristofszilagyi.intellij.kotlin.inspections.ReturnPlatformTypeInspection"
                         displayName="Return platform type"
                         groupPath="Kotlin"
                         groupName="Probably bugs"
                         enabledByDefault="true"
                         level="ERROR"
                         language="kotlin"
        />
    </extensions>
</idea-plugin>